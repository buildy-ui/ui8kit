{
  "include": ["./src"],
  "exclude": ["./lib", "./dist"],
  "compilerOptions": {
    "rootDir": "src",
    "types": ["node"],
    "target": "ES2020",
    "lib": ["DOM", "ESNext"],
    "module": "ES2020",
    "moduleResolution": "Node",
    "jsx": "react-jsx",
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true,
    "composite": true,
    "declaration": true,
    "declarationDir": "./dist",
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@/core": ["./src/core/index"],
      "@/core/*": ["./src/core/*"],
      "@ui8kit/theme": ["../theme/index"],
      "@/components": ["./src/components/index"],
      "@/components/*": ["./src/components/*"]
    }
  }
}
